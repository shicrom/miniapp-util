{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "sourceType": "module"
    },
    "globals": {
        "wx": true
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "global-require": [
            "off"
        ],
        "no-bitwise": [
            "error",
            {
                "allow": [
                    "&"
                ]
            }
        ],
        "no-restricted-syntax": "off",
        "guard-for-in": "off",
        "no-confusing-arrow": "off"
    }
}